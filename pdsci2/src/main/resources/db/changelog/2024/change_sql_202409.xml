    <changeSet id="20240921-jointOrgTable_add_spe" author="zxr">
        <sql>
            alter table pdsci.RES_JOINT_ORG add spe_id varchar2(32);
            alter table pdsci.RES_JOINT_ORG add spe_name varchar2(32);
            comment on column pdsci.RES_JOINT_ORG.spe_id is '协同专业基地编码';
            comment on column pdsci.RES_JOINT_ORG.spe_name is '协同专业基地名称';
        </sql>
    </changeSet>

    <changeSet id="20240924-resBase_add_column" author="zxr">
        <!-- 基地信息扩展，原来的BASE_INFO字段最长4000字符，多了不好操作，怕超了，又加一个字段，且从原先的xml格式改为json格式，省点字符 -->
        <sql>
            alter table pdsci.RES_BASE add BASE_EXT_INFO CLOB;
            comment on column pdsci.RES_BASE.BASE_EXT_INFO is '基地扩展信息';
        </sql>
    </changeSet>

