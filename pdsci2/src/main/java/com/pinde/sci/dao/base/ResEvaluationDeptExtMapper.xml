<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pinde.sci.dao.base.ResEvaluationDeptExtMapper" >
    <resultMap id="BaseResultMap" type="com.pinde.sci.form.res.ResEvaluationDeptExt" >
        <result column="RECORD_FLOW" property="recordFlow" jdbcType="VARCHAR" />
        <result column="CFG_FLOW" property="cfgFlow" jdbcType="VARCHAR" />
        <result column="DEPT_FLOW" property="deptFlow" jdbcType="VARCHAR" />
        <result column="DEPT_NAME" property="deptName" jdbcType="VARCHAR" />
        <result column="RECORD_STATUS" property="recordStatus" jdbcType="VARCHAR" />
        <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
        <result column="CREATE_USER_FLOW" property="createUserFlow" jdbcType="VARCHAR" />
        <result column="MODIFY_TIME" property="modifyTime" jdbcType="VARCHAR" />
        <result column="MODIFY_USER_FLOW" property="modifyUserFlow" jdbcType="VARCHAR" />
    </resultMap>
    <resultMap id="DeptResultMap" type="com.pinde.core.model.SysDept">
        <id column="DEPT_FLOW" property="deptFlow" jdbcType="VARCHAR" />
        <result column="ORG_FLOW" property="orgFlow" jdbcType="VARCHAR" />
        <result column="DEPT_CODE" property="deptCode" jdbcType="VARCHAR" />
        <result column="DEPT_NAME" property="deptName" jdbcType="VARCHAR" />
        <result column="ORDINAL" property="ordinal" jdbcType="DECIMAL" />
        <result column="RECORD_STATUS" property="recordStatus" jdbcType="VARCHAR" />
        <result column="CREATE_TIME" property="createTime" jdbcType="VARCHAR" />
        <result column="CREATE_USER_FLOW" property="createUserFlow" jdbcType="VARCHAR" />
        <result column="MODIFY_TIME" property="modifyTime" jdbcType="VARCHAR" />
        <result column="MODIFY_USER_FLOW" property="modifyUserFlow" jdbcType="VARCHAR" />
        <result column="DEPT_PINYIN" property="deptPinyin" jdbcType="VARCHAR" />
        <result column="DEPT_ID" property="deptId" jdbcType="VARCHAR" />
        <result column="DEPT_PID" property="deptPid" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Example_Where_Clause" >
        <where >
            <foreach collection="oredCriteria" item="criteria" separator="or" >
                <if test="criteria.valid" >
                    <trim prefix="(" suffix=")" prefixOverrides="and" >
                        <foreach collection="criteria.criteria" item="criterion" >
                            <choose >
                                <when test="criterion.noValue" >
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue" >
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue" >
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue" >
                                    and ${criterion.condition}
                                    <foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Base_Column_List" >
        ED.RECORD_FLOW, ED. CFG_FLOW, ED. DEPT_FLOW, SD.DEPT_NAME, ED. RECORD_STATUS, ED. CREATE_TIME, ED. CREATE_USER_FLOW, ED. MODIFY_TIME, ED.MODIFY_USER_FLOW
    </sql>
    <sql id="Dept_Column_List" >
        DEPT_FLOW, ORG_FLOW, DEPT_CODE, DEPT_NAME, ORDINAL, RECORD_STATUS, CREATE_TIME, CREATE_USER_FLOW,
        MODIFY_TIME, MODIFY_USER_FLOW, DEPT_PINYIN, DEPT_ID, DEPT_PID
    </sql>
    <select id="selectByRecord" resultMap="BaseResultMap"  parameterType="com.pinde.sci.model.mo.ResEvaluationDept" >
        select
        <include refid="Base_Column_List" />
        from RES_EVALUATION_DEPT ED
        LEFT JOIN SYS_DEPT SD ON ED.DEPT_FLOW = SD.DEPT_FLOW
        where 1=1
        <if test="record.recordFlow != null" >
          and   ED. RECORD_FLOW = #{record.recordFlow,jdbcType=VARCHAR}
        </if>
        <if test="record.cfgFlow != null" >
            and  ED. CFG_FLOW = #{record.cfgFlow,jdbcType=VARCHAR}
        </if>
        <if test="record.deptFlow != null" >
            and ED.  DEPT_FLOW = #{record.deptFlow,jdbcType=VARCHAR}
        </if>
        <if test="record.recordStatus != null" >
            and   ED. RECORD_STATUS = #{record.recordStatus,jdbcType=VARCHAR}
        </if>

    </select>
    <select id="getDeptExt" resultMap="DeptResultMap" >
        select
        <include refid="Dept_Column_List" />
        from SYS_DEPT ED
        WHERE ED.ORG_FLOW = #{orgFlow,jdbcType=VARCHAR}
        AND ED.record_status = 'Y'
        AND NOT EXISTS (SELECT 1
        FROM RES_EVALUATION_DEPT DE
        WHERE DE.DEPT_FLOW = ED.DEPT_FLOW
        AND de.record_status = 'Y'
        AND de.cfg_flow != #{cfgFlow,jdbcType=VARCHAR}
        )
        order by ed.dept_code
    </select>
    <select id="readResEvaluationCfgByDept" resultMap="com.pinde.sci.dao.base.ResEvaluationCfgMapper.ResultMapWithBLOBs" >
        select
          *
        from RES_EVALUATION_CFG ED
        WHERE record_status = 'Y'
        AND  EXISTS (SELECT 1
            FROM RES_EVALUATION_DEPT DE
            WHERE DE.cfg_flow = ED.cfg_flow
            AND de.record_status = 'Y'
            AND dept_flow=#{deptFlow}
        )
        order by ed.create_time desc
    </select>
</mapper>